  "license": "BSD-2-Clause",
  "dependencies": {
    "@vmw/mobile-flows-connector-commons": "^1.4.7",
    "axios": "^0.21.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "nyc": "^15.1.0",
    "path": "^0.12.7",
    "request": "^2.88.2",
    "uuid": "^8.3.2",
    "y18n": "^5.0.8"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.1.0"
  }
