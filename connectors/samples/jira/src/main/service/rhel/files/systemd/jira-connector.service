[Unit]
Description=Jira Connector Service
After=network.target

[Service]
Type=simple
User=roswell
ExecStart=/usr/bin/java -jar /opt/vmware/connectors/jira/jira-connector.jar  --spring.config.location=file:/opt/vmware/connectors/jira/application.properties,file:/etc/opt/vmware/connectors/jira/application.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target
