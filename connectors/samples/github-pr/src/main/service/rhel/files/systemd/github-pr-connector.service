[Unit]
Description=GitHub PR Connector Service
After=network.target

[Service]
Type=simple
User=roswell
ExecStart=/usr/bin/java -jar /opt/vmware/connectors/github-pr/github-pr-connector.jar --spring.config.location=file:/opt/vmware/connectors/github-pr/application.properties,file:/etc/opt/vmware/connectors/github-pr/application.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target
